pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    DOCKERHUB_CREDENTIALS = credentials('gautham-dockerhub')
  }
  stages {
    stage('Initialize') {
            steps {
                script {
                    properties([pipelineTriggers([pollSCM('* * * * *')])])
                }
                git branch: 'ci-cd-setup' , url: 'https://github.com/airavata-courses/terra.git'
            }
        }
    stage('Image Build') {
      steps {
        sh 'docker build -t gauti091/sql-standalone:linux user.session.management/DB_docker/'
      }
    }
    stage('Docker Login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Docker Push') {
      steps {
        sh 'docker push gauti091/sql-standalone:linux'
      }
    }
    stage('Deploy image'){
         steps{
            sshagent(credentials:['kuber-root-some1']){
              sh """ssh -tt root@149.165.153.12 -o "StrictHostKeyChecking no"  << EOF
                   whoami
                   kubectl get pods
                   kubectl rollout restart deployment/mysql-deployment
                   pwd
                   exit
                   EOF"""
          }
        echo "success deploy"
         }
       }
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}
