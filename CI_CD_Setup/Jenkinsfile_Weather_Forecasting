pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    DOCKERHUB_CREDENTIALS = credentials('gautham-dockerhub')
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t gauti091/weather-forecast weather-forecasting-service/'
      }
    }
    stage('Login') {
      steps {
        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
      }
    }
    stage('Push') {
      steps {
        sh 'docker push gauti091/weather-forecast'
      }
    }
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}
